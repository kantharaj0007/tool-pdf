    <script>
        // Mobile Menu Toggle
        const mobileMenuBtn = document.getElementById('mobileMenuBtn');
        const mainNav = document.getElementById('mainNav');
        
        mobileMenuBtn.addEventListener('click', () => {
            mainNav.classList.toggle('active');
            mobileMenuBtn.innerHTML = mainNav.classList.contains('active') ? 
                '<i class="fas fa-times"></i>' : '<i class="fas fa-bars"></i>';
        });
        
        // Close mobile menu when clicking on a link
        document.querySelectorAll('#mainNav a').forEach(link => {
            link.addEventListener('click', () => {
                mainNav.classList.remove('active');
                mobileMenuBtn.innerHTML = '<i class="fas fa-bars"></i>';
            });
        });
        
        // Tool Selection
        const toolCards = document.querySelectorAll('.tool-card');
        const toolInterfaces = document.getElementById('tool-interfaces');
        const closeToolButtons = document.querySelectorAll('.close-tool');
        
        toolCards.forEach(card => {
            card.addEventListener('click', (e) => {
                if (e.target.classList.contains('use-tool') || e.target.closest('.use-tool')) {
                    e.preventDefault();
                    const toolName = card.getAttribute('data-tool');
                    
                    // Hide all tool interfaces
                    document.querySelectorAll('.tool-interface').forEach(interface => {
                        interface.classList.remove('active-tool');
                    });
                    
                    // Hide all result sections
                    document.querySelectorAll('.result-section').forEach(result => {
                        result.style.display = 'none';
                    });
                    
                    // Show selected tool interface
                    const toolInterface = document.getElementById(`${toolName}-tool`);
                    if (toolInterface) {
                        toolInterface.classList.add('active-tool');
                        window.scrollTo({
                            top: toolInterfaces.offsetTop - 20,
                            behavior: 'smooth'
                        });
                    }
                }
            });
        });
        
        closeToolButtons.forEach(button => {
            button.addEventListener('click', () => {
                document.querySelectorAll('.tool-interface').forEach(interface => {
                    interface.classList.remove('active-tool');
                });
            });
        });
        
        // File Upload Functionality
        const fileUploads = document.querySelectorAll('.file-upload');
        
        fileUploads.forEach(upload => {
            const input = upload.querySelector('.file-input');
            
            upload.addEventListener('click', () => {
                input.click();
            });
            
            upload.addEventListener('dragover', (e) => {
                e.preventDefault();
                upload.style.borderColor = var(--primary-color);
                upload.style.backgroundColor = 'rgba(67, 97, 238, 0.05)';
            });
            
            upload.addEventListener('dragleave', () => {
                upload.style.borderColor = '#ccc';
                upload.style.backgroundColor = 'rgba(248, 249, 250, 0.5)';
            });
            
            upload.addEventListener('drop', (e) => {
                e.preventDefault();
                upload.style.borderColor = '#ccc';
                upload.style.backgroundColor = 'rgba(248, 249, 250, 0.5)';
                
                if (e.dataTransfer.files.length) {
                    input.files = e.dataTransfer.files;
                    handleFileSelection(input);
                }
            });
            
            input.addEventListener('change', () => {
                if (input.files.length) {
                    handleFileSelection(input);
                }
            });
        });
        
        function handleFileSelection(input) {
            const uploadArea = input.closest('.file-upload');
            const fileName = input.files[0].name;
            const fileSize = (input.files[0].size / (1024 * 1024)).toFixed(2); // MB
            
            uploadArea.innerHTML = `
                <i class="fas fa-check-circle" style="color: var(--success-color); font-size: 3rem;"></i>
                <p>${fileName}</p>
                <p class="small">${fileSize} MB</p>
                <button class="btn btn-secondary" style="margin-top: 10px; padding: 8px 15px;">
                    <i class="fas fa-sync-alt"></i> Change File
                </button>
                <input type="file" id="${input.id}" class="file-input" accept="${input.accept}" style="display: none;">
            `;
            
            // Reattach event listeners to the new change file button
            uploadArea.querySelector('button').addEventListener('click', (e) => {
                e.stopPropagation();
                input.click();
            });
        }
        
        // Tool Functionality Examples
        // PDF Compress
        document.getElementById('compress-pdf-btn')?.addEventListener('click', function() {
            const spinner = document.getElementById('pdf-compress-spinner');
            const resultSection = document.getElementById('pdf-compress-result');
            
            // Show loading spinner
            spinner.style.display = 'block';
            
            // Simulate processing
            setTimeout(() => {
                spinner.style.display = 'none';
                resultSection.style.display = 'block';
                
                // Scroll to result
                resultSection.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
            }, 2000);
        });
        
        // Image Compress
        document.getElementById('compress-image-btn')?.addEventListener('click', function() {
            const spinner = document.getElementById('image-compress-spinner');
            const resultSection = document.getElementById('image-compress-result');
            
            // Show loading spinner
            spinner.style.display = 'block';
            
            // Simulate processing
            setTimeout(() => {
                spinner.style.display = 'none';
                resultSection.style.display = 'block';
                
                // Scroll to result
                resultSection.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
            }, 2000);
        });
        
